// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.187.0/containers/dotnet
{
	"name": "C# (.NET)",
	"build": {
		"dockerfile": "Dockerfile",
		"args": { 
			// Update 'VARIANT' to pick a .NET Core version: 2.1, 3.1, 5.0
			"VARIANT": "5.0",
			// Options
			"NODE_VERSION": "lts/*",
            "HIPPO_VERSION": "v0.7.0",
            "BINDLE_VERSION": "v0.4.1",
            "WAGI_VERSION": "v0.2.0"
		}
	},

	// Set *default* container specific settings.json values on container create.
	"settings": {
        "remote.autoForwardPorts": false
    },

	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"ms-dotnettools.csharp"
	],

    "containerEnv" : {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "BINDLE_URL" : "http://localhost:8080/v1"
    },

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [ 5001, 5003, 32768, 32769, 32770],

	// Comment out connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.

	// "remoteUser": "vscode",
    // Start bindle server, start hippo server and watch for any changes. 
	"postCreateCommand": "bindle-server & cd Hippo && dotnet restore && npm run build && dotnet build && dotnet dev-certs https; nohup dotnet watch run > /dev/null 2>&1 &",
	"portsAttributes": {
		"5001": {
			"label": "Hippo HTTPS Port",
            "protocol": "https"
		},
		"5003": {
			"label": "YARP HTTPS",
            "protocol": "https"
		},
        "32768": {
			"label": "Channel HTTP Port"
		},
		"32769": {
			"label": "Channel HTTP Port"
		},
        "32770": {
			"label": "Channel HTTP Port"
		}
	}
}